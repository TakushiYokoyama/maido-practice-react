{
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/build": true,
    "**/dist": true
  },
  "prettier.eslintIntegration": true,
  "editor.tabSize": 2,
  "prettier.trailingComma": "all",
  "tslint.autoFixOnSave": true,
  "tslint.alwaysShowRuleFailuresAsWarnings": true,
  "tslint.alwaysShowStatus": true,
  "files.autoSave": "onFocusChange",
  "editor.formatOnSave": true,
  "cSpell.ignoreRegExpList": ["/.*ãƒ¼/"],
  "cSpell.ignorePaths": [
    "**/package-lock.json",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/**",
    ".vscode"
  ],
  "cSpell.words": [
    "Lifecycle",
    "Theming",
    "browserslist",
    "csstype",
    "middlewares",
    "urljoin"
  ]
}
